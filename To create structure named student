#include<stdio.h>
#include<conio.h>
void main()
{
 int s1,s2,s3,t;
 float p;
 clrscr();

 printf("\n Enter marks of 3 subjects each out of 100 ");
 printf("\n\n ********************************************");

 printf("\n\n m1= ");
 scanf("%d",&s1);

 printf("\n m2= ");
 scanf("%d",&s2);

 printf("\n m3 = ");
 scanf("%d",&s3);
 t=s1+s2+s3;  //Total
 printf("\n Total marks = %d/500",t);

 p=t/5;  //Percentage
